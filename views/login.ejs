<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>

    <!-- <body onLoad="Swal.fire('Debes agregar el titulo!')";> -->
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
            <!-- Page Header-->
            <header class="masthead" style="background-image: url('/img/moon.jpg')">
                <div class="container position-relative px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="page-heading">
                                <h1>Login </h1>
                                <span class="subheading"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main Content-->
            <main class="mb-4">
                <div class="container px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            
                            <div class="my-5">
                                <% if(errors != null && errors.length > 0){ %>
                                    <ul class="list-group"></ul>
                                    <% for (var i = 0; i < errors.length; i++) { %>
                                    <li class="list-group-item list-group-item-danger"><%= errors[i] %></li>
                                    <% } %>
                                    </ul>
                                    <% } %>
                                <form action="/users/login" method="post" enctype="multipart/form-data">
                                    <div class="form-floating">
                                        <input class="form-control" id="username" name="username" type="text" placeholder="User Name" value="<%= username %>"required  oninvalid="Swal.fire('Ingresa el usuario');" />
                                        <!-- <input class="form-control" id="username" name="username" type="text" placeholder="User Name" value="<%= username %>"/> -->
                                        <label>User Name</label>                                        
                                    </div>
                                    <div class="form-floating">
                                        <input class="form-control" id="password" name="password" type="password" placeholder="Password" value="<%= password %>"required  oninvalid="Swal.fire('Ingresa la ContraseÃ±a');" />
                                        <!-- <input class="form-control" id="password" name="password" type="password" placeholder="Password" value="<%= password %>" /> -->
                                        <label>Password</label>                                        
                                    </div>                                    
                                    <br />
                                    
                                    <div class="d-none" id="submitErrorMessage">
                                        <div class="text-center text-danger mb-3">Error sending message!</div>
                                    </div>
                                    <!-- Submit Button-->
                                    <button type="submit" class="btn btn-primary" id="submitButton">Login</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <!-- Footer-->
            <%- include('layouts/footer'); -%>
                <%- include('layouts/scripts'); -%>

    </body>

</html>